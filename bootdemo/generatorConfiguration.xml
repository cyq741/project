<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple">

        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.boot.bootdemo.utils.MyMapper"/>
        </plugin>

        <commentGenerator>
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/nanyangfanjin?useSSL=false"
                        userId="root"
                        password="123456">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--生成的Bean-->
        <javaModelGenerator targetPackage="com.boot.bootdemo.bean" targetProject="src/main/java"/>
        <!--生成Mapper目录-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resource"/>
        <!--配置mapper对应的java映射-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.boot.bootdemo.dao" targetProject="src/main/java"/>

        <table tableName="userinfo" domainObjectName="UserInfo" mapperName="UserDao"></table>
        <table tableName="dbinfo" domainObjectName="DbInfo" mapperName="DBDao"></table>
        <table tableName="recharge_log" domainObjectName="Log" mapperName="LogDao"></table>
    </context>

</generatorConfiguration>